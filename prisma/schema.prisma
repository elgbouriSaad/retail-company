// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  phone     String?
  address   String?  @db.Text
  avatar    String?
  isBlocked Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders         Order[]
  contactMessages ContactMessage[]

  @@map("users")
}

model Product {
  id           String   @id @default(cuid())
  name         String
  description  String   @db.Text
  price        Decimal  @db.Decimal(10, 2)
  category     Category
  images       String   @db.Text // JSON array of image URLs
  sizes        String   @db.Text // JSON array of available sizes
  stock        Int
  availability Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  orderItems     OrderItem[]
  contactMessages ContactMessage[]

  @@map("products")
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  status      OrderStatus @default(PENDING)
  totalAmount Decimal     @db.Decimal(10, 2)
  notes       String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  productId   String
  productName String  // Snapshot of product name at time of order
  quantity    Int
  size        String
  price       Decimal @db.Decimal(10, 2) // Snapshot of price at time of order
  createdAt   DateTime @default(now())

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  productId String?
  status    MessageStatus @default(UNREAD)
  response  String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  product Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@map("contact_messages")
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model Invoice {
  id            String        @id @default(cuid())
  reference     String        @unique
  clientId      String
  clientName    String
  date          DateTime
  items         String        @db.Text // JSON array of invoice items
  subtotal      Decimal       @db.Decimal(10, 2)
  discountType  DiscountType?
  discountValue Decimal?      @db.Decimal(10, 2)
  total         Decimal       @db.Decimal(10, 2)
  amountPaid    Decimal       @default(0) @db.Decimal(10, 2)
  amountDue     Decimal       @db.Decimal(10, 2)
  status        InvoiceStatus
  notes         String?       @db.Text
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  payments Payment[]

  @@map("invoices")
}

model Payment {
  id        String        @id @default(cuid())
  invoiceId String
  method    PaymentMethod
  amount    Decimal       @db.Decimal(10, 2)
  date      DateTime
  reference String?
  notes     String?       @db.Text
  createdAt DateTime      @default(now())

  // Relations
  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model CustomOrder {
  id                 String   @id @default(cuid())
  clientName         String
  phoneNumber        String
  pongeItems         String   @db.Text // JSON array of ponge items
  referenceMaterials String   @db.Text // JSON array of reference materials
  images             String?  @db.Text // JSON array of image URLs
  startDate          DateTime
  finishDate         DateTime
  downPayment        Decimal  @db.Decimal(10, 2)
  paymentMonths      Int
  totalAmount        Decimal  @db.Decimal(10, 2)
  status             OrderStatus @default(PENDING)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("custom_orders")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum Category {
  FABRICS
  CLOTHES
  KITS
  THREADS
  ACCESSORIES
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
  CANCELLED
}

enum MessageStatus {
  UNREAD
  READ
  RESPONDED
}

enum InvoiceStatus {
  PAID
  PARTIAL
  UNPAID
}

enum PaymentMethod {
  CASH
  CARD
  CHECK
  TRANSFER
  MOBILE
}

enum DiscountType {
  PERCENTAGE
  AMOUNT
}